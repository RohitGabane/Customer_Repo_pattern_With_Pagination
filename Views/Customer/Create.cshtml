        display: block;
        margin-bottom: 5px;
    }

    /* Input styles */
    .form-control {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
    }
</style>

<h2>Create Customer</h2>

<form asp-action="Create" method="post" onsubmit="showSuccessAlert()">
    @*<div class="form-group">
        <label asp-for="FirstName">First Name</label>
