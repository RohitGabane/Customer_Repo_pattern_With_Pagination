@model Customer_Repo_Pattern.Models.Customer

<style>
    .form-group {
        margin-bottom: 20px;
    }

  
</style>


<h2>Edit</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CustomerId" />

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input type="text" maxlength="15" asp-for="FirstName" class="form-control" required pattern="[A-Za-z]+" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input type="text" maxlength="15" asp-for="LastName" class="form-control" required pattern="[A-Za-z]+" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input type="email" maxlength="30" asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input type="tel" maxlength="10" asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <button type="submit" onclick="showSuccessAlert" class="btn btn-primary">Save changes</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>

</form>
<script>
    function showSuccessAlert() {
        alert('Update successful!');
    }
</script>